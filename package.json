{
  "name": "kenji-hub-monorepo",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "npx next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --config eslint.config.mjs",
    "clean": "rm -rf .next out",
    "docker:dev": "docker-compose up dev",
    "docker:prod": "docker-compose up prod",
    "docker:build": "docker-compose build",
    "docker:down": "docker-compose down",
    "docker:dev:clean": "./scripts/dev.sh",
    "build:static": "NODE_ENV=production next build",
    "deploy": "npm run build:static && gh-pages -d out"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.0.1",
    "eslint": "^8",
    "eslint-config-next": "14.0.0",
    "gh-pages": "^6.3.0",
    "postcss": "^8",
    "tailwindcss": "^3.3.0",
    "typescript": "^5"
  },
  "dependencies": {
    "@tailwindcss/typography": "^0.5.16",
    "clsx": "^2.1.1",
    "next": "^14.2.31",
    "react": "^18",
    "react-dom": "^18",
    "tailwind-merge": "^3.3.1"
  }
}